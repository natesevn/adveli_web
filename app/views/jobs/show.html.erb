<% provide(:adveli, "/") %>
<% provide(:about, "/#about") %>
<% provide(:features, "/#features") %>
<% provide(:media, "/media") %>
<% provide(:contact, "/#contact") %>
<% provide(:jobs, "/jobs") %>

<% provide(:headerstyle, "min-height: 50%") %>
<% provide(:heading, "Careers at Adveli") %>
<% provide(:subheading, "Join us and make the world a better place!") %>

<%= render 'layouts/nav' %>

<%= render 'layouts/header' %>

<section class="bg" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

            	<p>
				  <h3 style="margin-bottom: 0px">Role:</h3>
				  <br>
				  <%= @job.role %>
				</p>
				<br>

				<p>
				  <h3 style="margin-bottom: 0px">About you:</h3>
				  <br>
				  <%= @job.about_you %>
				</p>
				<br>

				<p>
				  <h3 style="margin-bottom: 0px">Requirements:</h3>
				  <br>
				  <%= @job.requirements %>
				</p>
				<br>

				<p>
				  <h3 style="margin-bottom: 0px">Location:</h3>
				  <br>
				  <%= @job.location %>
				</p>

            </div>
        </div>
    </div>
</section>

<p id="notice"><%= notice %></p>

<%= render 'layouts/footer' %>



