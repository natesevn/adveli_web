<% provide(:adveli, "/") %>
<% provide(:about, "/#about") %>
<% provide(:features, "/#features") %>
<% provide(:media, "/media") %>
<% provide(:contact, "/#contact") %>
<% provide(:jobs, "/jobs") %>

<% provide(:headerstyle, "min-height: 50%") %>
<% provide(:heading, "Careers at Adveli") %>
<% provide(:subheading, "Join us and make the world a better place!") %>

<%= render 'layouts/nav' %>

<%= render 'layouts/header' %>

<div class="content-wrapper">
  <div class="content-inner-wrapper" style="width: 55%">
    <h2 class="content-heading">Open Positions:</h2>
    <hr>
      <ul class="content-list">
        <li class="content-list-container">
          <div class="jobs">

            <% @jobs.each do |job| %>
              <% if job == @jobs.last && job == @jobs.first %>
                <div class="job-item-first">
                  <h4 class="job-title"><td><%= link_to job.role, job %></td></h4>
                  <p class="job-location-last"><%= job.location %></p>
                </div>
              <% elsif job == @jobs.first %>
                <div class="job-item-first">
                  <h4 class="job-title"><td><%= link_to job.role, job %></td></h4>
                  <p class="job-location"><%= job.location %></p>
                </div>
              <% elsif job == @jobs.last %>
                <div class="job-item">
                  <h4 class="job-title"><td><%= link_to job.role, job %></td></h4>
                  <p class="job-location-last"><%= job.location %></p>
                </div>
              <% else %>
                <div class="job-item">
                  <h4 class="job-title"><td><%= link_to job.role, job %></td></h4>
                  <p class="job-location"><%= job.location %></p>
                </div>
              <% end%>

            <% end %>

          </div>
        </li>
      </ul>
  </div>
</div>

